{
  "name": "coga-mvp",
  "version": "0.1.0",
  "description": "COGA - Real-Time Stress Detection & Intervention System",
  "main": "electron/main.js",
  "scripts": {
    "dev": "webpack serve --mode development --open",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:extension": "webpack --config webpack.extension.config.js --mode production",
    "build:extension:dev": "webpack --config webpack.extension.config.js --mode development",
    "watch": "webpack --mode development --watch",
    "watch:extension": "webpack --config webpack.extension.config.js --mode development --watch",
    "test": "tsx tests/stressDetector.test.ts",
    "serve": "node server.js",
    "serve:public": "node server.js",
    "start": "npm run build && npm run serve",
    "electron": "electron .",
    "electron:dev": "npm run build:dev && electron .",
    "electron:start": "npm run build && electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win"
  },
  "keywords": [
    "stress-detection",
    "wellness",
    "productivity",
    "intervention",
    "desktop-app",
    "electron"
  ],
  "author": "COGA Labs",
  "license": "MIT",
  "dependencies": {
    "core-js": "^3.33.0",
    "lucide": "^0.548.0",
    "node-gg": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.28.5",
    "@types/node": "^24.9.2",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.cogalabs.coga-mvp",
    "productName": "COGA",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "electron/**/*",
      "public/**/*",
      "dist/**/*",
      "extension/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "extension/icons/icon128.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
